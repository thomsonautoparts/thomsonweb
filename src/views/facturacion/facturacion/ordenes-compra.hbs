        const d = document;
        const $sendCancelacion = d.getElementById("sendCancelacion")
        const $CantidadTotal = d.getElementById("CantidadTotal") 
        const $PrecioTotal = d.getElementById("PrecioTotal") 
        const $Estado = d.getElementById("Estado")
        const $spinner = d.getElementById("spinner")
        const $btnSend = d.getElementById("btnSend")
        const $insertarError = d.getElementById("insertarError")
        const tBody = d.getElementById("tBody")
        let fila
        const cambiarEstado = async (data) => {
        return await fetch("/cambiar-estado-orden", {
            method: "POST",
            body: JSON.stringify(data),
            headers: {
            "Content-type": "application/json; charset=utf-8",
            },
        })
            .then((response) => {
            return response.json();
            })
            .then((respuesta) => {
                if(respuesta.length == 2){
                    tBody.removeChild(fila)
                }else{
                    $insertarError.innerHTML = `
                    <div class="mt-2 alert alert-danger alert-dismissible fade show" role="alert">
                        Solo se puede cambiar el estado de las ordenes que se encuentren en estado "En proceso".
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    `
                }
            });
        };

        const solicitarinfoPorOrdenes = async (data) => {
        return await fetch("/solicitar-info-por-ordenes", {
            method: "POST",
            body: JSON.stringify(data),
            headers: {
            "Content-type": "application/json; charset=utf-8",
            },
        })
            .then((response) => {
            return response.json();
            })
            .then((respuesta) => {
                let tr = ""
                   for(i=0; i< respuesta.Ordenes.length; i++){
                    let linea = `
                          <tr>
                            <td class="text-center text-light">${respuesta.Ordenes[i].date} </td>
                            <td class="text-center text-light">${respuesta.Ordenes[i].email} </td>
                            <td class="text-center text-light">${respuesta.Ordenes[i].Estado} </td>
                            <td class="text-center text-light">${respuesta.Ordenes[i].OrdenNumero} </td>
                            <td class="text-center text-light">${respuesta.Ordenes[i].NumeroFactura} </td>
                            <td class="text-center text-light">${respuesta.Ordenes[i].TipoPrecio} </td>
                            <td class="text-center text-light">${respuesta.Ordenes[i].CantidadTotal} </td>
                            <td class="text-center text-light">${respuesta.Ordenes[i].PrecioTotal} </td>
                            <td class="text-center text-light"><a href="#" data-id="${respuesta.Ordenes[i]._id}" class="text-warning">Cambiar</a></td>
                            <td class="text-center text-light"><a href="/ver-orden-cliente/${respuesta.Ordenes[i]._id}" class="text-success">Ver</a></td>
                            <td class="text-center text-light"><a href="/generar-factura-orden/${respuesta.Ordenes[i]._id}" class="text-info">Generar</a></td>
                            <td class="text-center text-light"><a class="text-danger" href="#" data-id="${respuesta.Ordenes[i]._id}" data-toggle="modal" data-target="#exampleModal">Cancelar</a></td>
                        </tr>
                    `
                    tr += linea
                }
                d.addEventListener("click", e=> {
                    if(e.target.textContent == "Cancelar"){
                        let _id = e.target.getAttribute("data-id")
                        $sendCancelacion.setAttribute("href",`/cancelar-orden/${_id}`)
                    }
                })
                tBody.innerHTML = tr
                d.getElementById("footer").classList.remove("fixed-bottom")
                $CantidadTotal.textContent = respuesta.CantidadTotal
                $PrecioTotal.textContent = respuesta.PrecioTotal
                $spinner.setAttribute("hidden","")
            });
        };
        d.addEventListener("change", e => {
