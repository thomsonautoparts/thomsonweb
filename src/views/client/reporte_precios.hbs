<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/bootstrap.css">

</head>

<body class="bg-light">
    <main>
        <div class="container-fluid">
            <img src="/css/assets/logo_reporte.png" width="250px" height="50" alt="logo">
        </div>
        <h1 class="text-center text-dark">Lista de precios</h1>
        <div class="table-responsive">
            <form action="/">
                <table class="table table-striped table-hover table-sm">
                    <thead class="">
                        <tr>
                            <th class="h6" style="font-size: 15px;"><strong>Código Thomson</strong></th>
                            <th class="h6" style="font-size: 15px;"><strong>Código homólogo</strong></th>
                            <th class="h6" style="font-size: 15px;"><strong>Tipo producto</strong></th>
                            <th class="h6" style="font-size: 15px;"><strong>Descrpción</strong></th>
                            <th class="h6" style="font-size: 15px;"><strong>Posición</strong></th>
                            <th class="h6" style="font-size: 15px;"><strong>Precio</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each stock}}
                        <tr>
                            <td class="h6" style="font-size: 13px;"> {{CodigoT}} </td>
                            <td class="h6" style="font-size: 13px;"> {{CodigoG}} </td>
                            <td class="h6" style="font-size: 13px;"> {{TipoProducto}} </td>
                            <td class="h6" style="font-size: 13px;"> {{Descripcion}} </td>
                            <td class="cantidad h6" style="font-size: 13px;"> {{Posicion}} </td>
                            <td class="costo2 h6" style="font-size: 13px;"> {{Precio}} </td>
                        </tr>
                        {{/each}}
                    </tbody>

        </div>
    </main>
    <script>
        const cantidad = document.querySelectorAll(".cantidad")
        window.print()
    </script>
</body>

</html>